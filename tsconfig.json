{
  "compilerOptions": {
    "target": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true,
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@src": ["src"],
      "@config": ["src/config"],
      "@errors": ["src/errors"],
      "@modules": ["src/modules"]
    },
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "globals", "bin"]
  },
  "exclude": ["tests", "scripts", "dist", "bin", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "ts-node": {
    "transpileOnly": true
  }
}
